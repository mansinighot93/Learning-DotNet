@using OrderProcessing;
@model Orders

@{
    ViewBag.Title = "Update";
}

@using(Html.BeginForm())
{
    <table>
        <tr>
            <td>
                @Html.LabelFor(model => model.Id,new {htmlattributes = new {@class = "label label-info"}})
