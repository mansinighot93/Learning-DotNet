                @Html.EditorFor(model => model.Id,new {htmlattributes = new {@class = "form-control"}})
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.OrderDate,new {htmlattributes = new {@class = "label label-info"}})
